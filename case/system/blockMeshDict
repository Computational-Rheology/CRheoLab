  ymin -0.5;
  zmin -0.5;
  
  xmax 0.5;  
  ymax 0.5;
  zmax 0.5;

vertices
(
($xmin  $ymin  $zmin)
($xmax  $ymin  $zmin)  
($xmax  $ymax  $zmin)  
($xmin  $ymax  $zmin) 
($xmin  $ymin  $zmax)  
($xmax  $ymin  $zmax) 
($xmax  $ymax  $zmax)
($xmin  $ymax  $zmax)
);


blocks
(   
	 hex (0 1 2 3 4 5 6 7) (10 10 1) simpleGrading (1 1 1) 
);


